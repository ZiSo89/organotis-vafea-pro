{
  "name": "organotis-vafea",
  "version": "1.0.1",
  "description": "Οργανωτής Βαφέα - Desktop Application",
  "author": "Ζήσογλου Σάκης",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-packager . \"Οργανωτής Βαφέα\" --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.painter.organizer",
    "productName": "Οργανωτής Βαφέα",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "Οργανωτής-Βαφέα-v${version}.exe"
    },
    "files": [
      "index.html",
      "electron-main.js",
      "favicon.ico",
      "icon.png",
      "src/**/*",
      "assets/**/*",
      "build/**/*",
      "!node_modules",
      "!dist",
      "!docs",
      "!**/*.md"
    ]
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  }
}
