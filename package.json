{
  "name": "organotis-vafea",
  "version": "1.0.1",
  "description": "Οργανωτής Βαφέα - Desktop Application with Offline Support",
  "author": "Ζήσογλου Σάκης",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "npx electron-rebuild",
    "build": "electron-builder",
    "build:portable": "electron-builder --win portable",
    "package": "electron-packager . \"Οργανωτής Βαφέα\" --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.painter.organizer",
    "productName": "Οργανωτής Βαφέα",
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/icons/favicon.ico"
    },
    "portable": {
      "artifactName": "Οργανωτής-Βαφέα-v${version}.exe"
    },
    "files": [
      "public/**/*",
      "electron/**/*",
      "config/**/*",
      "api/**/*",
      "database/**/*",
      "!node_modules/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*",
      "!dist",
      "!docs",
      "!**/*.md"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*",
      "node_modules/bindings/**/*",
      "node_modules/file-uri-to-path/**/*"
    ]
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9"
  }
}
